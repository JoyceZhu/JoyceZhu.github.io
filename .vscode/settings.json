{
  // Columns at which to show vertical rulers
  "editor.rulers": [80],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[css]": {
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.formatOnSave": true
  },
  "html.autoClosingTags": true,
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#00d9ffa6",
    "activityBar.background": "#8d16a5ce",
    "statusBar.background": "#8d16a5ce",
    "statusBarItem.hoverBackground": "#8d16a5ce",
    "titleBar.activeBackground": "#8d16a5ce",
    "titleBar.inactiveBackground": "#8d16a5ce"
    // test
  }
}
